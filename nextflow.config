manifest {
    name            = 'IDENTXX/wf-metabarcoding-v2'
    mainScript      = 'main.nf'
    nextflowVersion = '>=20.10.0'
}

params {
    reads          = ''
    out_dir        = 'output'
    db_choice      = 'oomycetes_cox'
    custom_db_path = ''
    min_identity   = 90
    min_coverage   = 80
}

process {
    container = 'identxx/fusarium-toolbox:v1.0'
    cpus   = 4
    memory = '4 GB'
    errorStrategy = 'finish'
    
    withName: 'MAKEBLASTDB|BLASTN' {
        container = 'ncbi/blast:2.16.0'
    }
}
